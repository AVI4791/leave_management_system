<!-- Centered forms -->
<div class="card-body">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-10 offset-md-1">
                            <div class="header-elements-inline justify-content-center">
                                <h5 class="card-title font-weight-semibold">Leave Request Form</h5>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="card-body">
                    <div class="row">
                </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-10 offset-md-1">
                            <%= form_with(model: @leave, local: true) do |form| %>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Leave Apply Date:</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="leave[leave_apply]" class="form-control" placeholder="<%= DateTime.now.strftime("%m/%d/%Y")%>" value="<%= DateTime.now.strftime("%m/%d/%Y")%>" readonly="true">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Reporting Head:</label>
                                    <div class="col-lg-9">
									<select class="form-control select" name="leave[reporting_head]" data-fouc>
											<option value= 1 >Arizona</option>
											<option value= 2 >Colorado</option>
											<option value= 3 >Idaho</option>
											<option value= 4 >Wyoming</option>
									</select>
                                    </div>
                                </div>
								<div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Enter From Date:</label>
                                     <div class="col-lg-9">
                                    <input type="text"  name="leave[leave_from]" placeholder="From date" aria-label="First name" class="form-control start-date">
                                    </div>
								</div>

								<div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Enter To Date:</label>
                                     <div class="col-lg-9">
                                    <input type="text"  name="leave[leave_to]" placeholder="To date" aria-label="Last name" class="form-control end-date">
                                    </div>
								</div>

                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Reason For Leave:</label>
                                    <div class="col-lg-9">
                                        <textarea rows="5" cols="5"  name="leave[reason]" class="form-control" placeholder="Enter your message here"></textarea>
                                    </div>
                                </div>

                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary">Request For Leave <i class="icon-paperplane ml-2"></i></button>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /form centered -->
  <script>
    $(function() {
      var $startDate = $('.start-date');
      var $endDate = $('.end-date');

      $startDate.datepicker({
        autoHide: true,
      });
      $endDate.datepicker({
        autoHide: true,
        startDate: $startDate.datepicker('getDate'),
      });

      $startDate.on('change', function () {
        $endDate.datepicker('setStartDate', $startDate.datepicker('getDate'));
      });
    });
  </script>
